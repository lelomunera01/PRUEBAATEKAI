generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum EstadoTarea {
  CREADA
  EN_PROGRESO
  BLOQUEADA
  FINALIZADA
  CANCELADA
}

model Tarea {
  id Int @id @default(autoincrement())
  titulo String
  descripcion String?
  estado EstadoTarea @default(CREADA)
  responsable String 
  fechaCreacion DateTime @default(now())
}